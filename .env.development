# Redis (개발용)
REDIS_URL="redis://redis-dev:6379/0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=10

# AI 서비스 API 키 (개발/테스트용)
OPENAI_API_KEY="test-openai-key"
ANTHROPIC_API_KEY="test-anthropic-key"

# 마켓플레이스 API 키 (개발/테스트용)
