# 백업 서비스용 Dockerfile
FROM python:3.11-slim

# 필요한 패키지 설치
RUN apt-get update && apt-get install -y \
    postgresql-client-15 \
    curl \
    cron \
    && rm -rf /var/lib/apt/lists/*

# Python 의존성 설치
RUN pip install boto3 psycopg2-binary requests

# 작업 디렉토리 설정
WORKDIR /app

# 백업 스크립트 복사
COPY backup.py .
COPY health_check.py .

# 백업 디렉토리 생성
RUN mkdir -p /backups

# 환경 변수 설정
ENV PYTHONUNBUFFERED=1

# 백업 스크립트 실행 권한 부여
RUN chmod +x backup.py

# 기본 명령어 (cron 데몬 시작)
CMD ["python3", "backup.py", "backup", "--type", "scheduled"]