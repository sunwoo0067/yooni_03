# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/multi_seller_db
DATABASE_URL_ASYNC=postgresql+asyncpg://username:password@localhost:5432/multi_seller_db

# Application Settings
APP_NAME="Multi-Seller Platform API"
APP_VERSION="1.0.0"
DEBUG=False
SECRET_KEY=your-secret-key-here

# Security Settings
ENCRYPTION_MASTER_KEY=your-very-secure-encryption-master-key-32-chars-minimum
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=100
API_DAILY_QUOTA_DEFAULT=10000

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# External API Configurations
# Add your platform-specific API endpoints and configurations here

# Coupang API
COUPANG_API_BASE_URL=https://api-gateway.coupang.com/v2/providers/affiliate_open_api/apis/openapi/v1

# Naver Commerce API
NAVER_COMMERCE_API_BASE_URL=https://api.commerce.naver.com/external/v1

# 11st API
ELEVEN_ST_API_BASE_URL=https://openapi.11st.co.kr/rest

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=True

# File Upload Settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=uploads/
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,xlsx,csv

# Health Check Settings
HEALTH_CHECK_INTERVAL_MINUTES=30
AUTO_HEALTH_CHECK_ENABLED=True

# Platform API Timeouts (in seconds)
API_TIMEOUT_DEFAULT=30
API_TIMEOUT_HEALTH_CHECK=10
API_TIMEOUT_BULK_OPERATIONS=120