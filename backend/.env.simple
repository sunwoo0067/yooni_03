# ===========================================
# Yooni Dropshipping System - Simple Configuration for Personal Users
# ===========================================
# This is a simplified configuration file for personal/single-user usage
# Copy this file to .env to use the personal user mode

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=personal
PROJECT_NAME="Yooni Dropshipping - Personal Edition"
VERSION=1.0.0
DEBUG=true

# ===========================================
# Security Settings (Auto-generated for personal use)
# ===========================================
SECRET_KEY=personal-user-secret-key-change-if-needed
ENCRYPTION_KEY=personal-user-encryption-key-change-if-needed

# ===========================================
# Database Configuration (SQLite for simplicity)
# ===========================================
DATABASE_URL=sqlite:///./yooni_personal.db

# ===========================================
# CORS Settings
# ===========================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/personal_app.log
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# ===========================================
# AI Service API Keys (Optional - for advanced features)
# ===========================================
# Uncomment and add your API keys if you want to use AI features
# GEMINI_API_KEY=your-gemini-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

AI_ENABLED=false  # Set to true if you have API keys
AI_TIMEOUT_SECONDS=30
AI_MAX_RETRIES=2

# ===========================================
# E-commerce Platform API Keys (Required for operation)
# ===========================================
# Add your marketplace API keys here
# Coupang API
# COUPANG_VENDOR_ID=your-coupang-vendor-id
# COUPANG_ACCESS_KEY=your-coupang-access-key
# COUPANG_SECRET_KEY=your-coupang-secret-key

# Naver Smart Store
# NAVER_CLIENT_ID=your-naver-client-id
# NAVER_CLIENT_SECRET=your-naver-client-secret

# ===========================================
# Wholesale Platform Settings (Required for operation)
# ===========================================
# Add your wholesale platform API keys here
# OwnerClan
# OWNERCLAN_API_KEY=your-ownerclan-api-key
# OWNERCLAN_USER_ID=your-ownerclan-user-id

# ZenTrade
# ZENTRADE_API_KEY=your-zentrade-api-key
# ZENTRADE_USER_ID=your-zentrade-user-id

# DoMaeKkuk
# DOMAEKKUK_API_KEY=your-domaekkuk-api-key
# DOMAEKKUK_USER_ID=your-domaekkuk-user-id

# ===========================================
# Cache Configuration
# ===========================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=1800  # 30 minutes
CACHE_MAX_SIZE=500

# ===========================================
# File Upload Settings
# ===========================================
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,xlsx,csv

# ===========================================
# Background Tasks
# ===========================================
USE_BACKGROUND_TASKS=true

# ===========================================
# Collection Settings
# ===========================================
RUN_INITIAL_COLLECTION=true
AUTO_COLLECTION_ENABLED=true
COLLECTION_INTERVAL_HOURS=24
COLLECTION_BATCH_SIZE=20
COLLECTION_MAX_CONCURRENT=1

# ===========================================
# Single User Mode (Default for personal use)
# ===========================================
SINGLE_USER_MODE=true
SINGLE_USER_EMAIL=personal@yooni.local
SINGLE_USER_FULL_NAME="Personal User"

# ===========================================
# Development Settings
# ===========================================
DOCS_ENABLED=true
DOCS_URL=/docs
REDOC_URL=/redoc
FRONTEND_URL=http://localhost:3000
