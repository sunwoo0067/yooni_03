# Django Settings - PRODUCTION
DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-SECRET-KEY-IN-PRODUCTION
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database - Production
DATABASE_URL=postgres://username:password@db-host:5432/database_name

# Redis - Production  
REDIS_URL=redis://redis-host:6379/0

# Celery - Production
CELERY_BROKER_URL=redis://redis-host:6379/0
CELERY_RESULT_BACKEND=redis://redis-host:6379/0

# Upstash Redis (for AI Memory) - REQUIRED FOR PRODUCTION
UPSTASH_REDIS_REST_URL=https://your-actual-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-actual-redis-token

# Upstash Vector (for Semantic Search) - REQUIRED FOR PRODUCTION
UPSTASH_VECTOR_REST_URL=https://your-actual-vector-endpoint.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your-actual-vector-token

# AI Services - REQUIRED FOR PRODUCTION
OPENAI_API_KEY=your-actual-openai-api-key
ANTHROPIC_API_KEY=your-actual-anthropic-api-key

# Market APIs - REQUIRED FOR PRODUCTION
SMARTSTORE_CLIENT_ID=your-actual-client-id
SMARTSTORE_CLIENT_SECRET=your-actual-client-secret
COUPANG_ACCESS_KEY=your-actual-access-key
COUPANG_SECRET_KEY=your-actual-secret-key
GMARKET_API_KEY=your-actual-api-key

# Monitoring - Production
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=True

# AWS - Production
AWS_ACCESS_KEY_ID=your-actual-access-key
AWS_SECRET_ACCESS_KEY=your-actual-secret-key
AWS_DEFAULT_REGION=ap-northeast-2
AWS_STORAGE_BUCKET_NAME=your-production-bucket
AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# Email - Production
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-actual-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Yooini System <noreply@yourdomain.com>

# CORS - Production
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Additional Settings - Production
TIME_ZONE=Asia/Seoul
LANGUAGE_CODE=ko-kr

# Security - Production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
X_FRAME_OPTIONS=DENY
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Cache - Production
CACHE_TTL=3600
CACHE_BACKEND=redis://redis-host:6379/1

# Rate Limiting - Production
RATE_LIMIT_ENABLE=True
RATE_LIMIT_DEFAULT=1000/hour

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE_PATH=/var/log/yooini/app.log